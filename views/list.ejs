<%- include("partials/header") %>

<div class="box" id="heading">
    <h1> <%= title %> </h1>
</div>

<div class="box">
    <% newItems.forEach(item => { %>
        <div class="item">
            <input type="checkbox">
            <p> <%= item.name %> </p>
        </div>
    <% }); %>

    <div class="item">
        <form action="/" method="post">
            <input type="text" name="todo" placeholder="Add item" autocomplete="off">
            <button type="submit" name="list" value="<%= title %>">+</button>
        </form>
    </div>
</div>

<%- include("partials/footer") %>